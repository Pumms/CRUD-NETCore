
@{
    ViewData["Title"] = "Department";
}

<!-- Modal Tambah Data -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Department</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Enter Name">
                    </div>
                    <input type="text" id="Id" class="form-control" hidden>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="Cancel" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success" id="Save" onclick="Save()">Save</button>
                <button type="submit" class="btn btn-warning" id="Edit" onclick="Edit()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Container Fluid -->
<div class="container-fluid">
    <!-- Bread crumb and right sidebar toggle -->
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">@ViewData["Title"]</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ol>
        </div>
        <div class="col-md-6 col-4 align-self-center">
            <button data-toggle="modal" data-target="#Modal" id="BtnAdd" class="btn pull-right hidden-sm-down btn-success text-white">
                <i class="mdi mdi-plus-circle"></i> Add Department
            </button>
        </div>
    </div>
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- Start Page Content -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Data Export</h4>
                    <span class="card-subtitle">Export data To :</span>
                    <a href="/Department/ExportToCSV" class="btn btn-outline-dark">CSV</a>
                    <a href="/Department/ExportToExcel" class="btn btn-outline-dark">Excel</a>
                    <a href="/Department/ExportToPDF" class="btn btn-outline-dark">PDF</a>
                    <hr />
                    <div class="table-responsive">
                        <table id="DataTable1" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Department Name</th>
                                    <th>Create Date</th>
                                    <th>Update Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Content -->

</div>
<!-- End Container fluid  -->

